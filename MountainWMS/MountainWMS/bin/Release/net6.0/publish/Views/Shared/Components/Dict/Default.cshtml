@model List<M.Core.Entity.Sys_dict>
<div class="form-group">
    <label class="col-sm-2 control-label">@ViewData["type"] </label>
    <div class="col-sm-10">
        <select class="form-control" v-model="@ViewData["field"]" size="1">
            <option value="">请选择</option>
            @{
                if (Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <option value="@item.DictId">@item.DictName</option>
                    }
                }
            }
        </select>
    </div>
</div>