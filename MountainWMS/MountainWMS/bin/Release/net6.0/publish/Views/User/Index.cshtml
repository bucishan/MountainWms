            methods: {
                loadL: function () {
                    _self = this;
                    var obj = [{
                        checkbox: true,             //是否显示复选框
                        visible: true
                    },
                    {
                        field: 'UserId',
                        title: 'Id',
                        visible: false
                    }, {
                        field: 'UserName',
                        title: '姓名',
                        align: 'center',
                        sortable: true
                    }, {
                        field: 'UserNickname',
                        title: '昵称',
                        align: 'center',
                        sortable: true
                    }, {
                        field: 'DeptName',
                        align: 'center',
                        title: '部门'
                    }, {
                        field: 'RoleName',
                        align: 'center',
                        title: '角色'
                    }, {
                        field: 'Tel',
