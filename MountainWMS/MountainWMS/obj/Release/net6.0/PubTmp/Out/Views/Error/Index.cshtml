@model ErrorViewModel
@{
    Layout = "_LayoutMain";
}
<!DOCTYPE HTML>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>@Model.StatusCode</title>
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    
    <link rel="stylesheet" href="~/css/bootstrap.table.min.css" />
    <link rel="stylesheet" href="~/lib/adminlte/css/AdminLTE.icon.font.min.css" />
    <script type="text/javascript" src="~/lib/adminlte/js/adminlte.min.js"></script>
</head>
<body>
    <view>
        <section class="content">
            <div class="error-page">
                <h2 class="headline text-yellow"> @Model.StatusCode </h2>
                <div class="error-content">
                    <h3><i class="fa fa-warning text-yellow"></i> @Model.ErrorMessage</h3>
                    <p>
                        程序发生错误,您可以点击此链接返回首页 <a href="/">首页</a>
                    </p>
                </div>
            </div>
        </section>
    </view>
</body>
</html>

@section scripts{
    <script type="text/javascript">
        var app = new Vue({
            el: '#app'
        })
    </script>
}