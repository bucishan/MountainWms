<header class="main-header">
    <a href="/" class="logo">
        <span class="logo-mini"><b>@ViewBag.softname</b></span>
        <span class="logo-lg"><b>@ViewBag.softname</b> WMS</span>
    </a>
    <nav class="navbar navbar-static-top">
        <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
            <span class="sr-only">切换菜单导航</span>
        </a>
        <div class="navbar-custom-menu">
            <ul class="nav navbar-nav">
                <li class="dropdown user user-menu">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        <img src="~/@Html.Raw(@ViewBag.headimg)" class="user-image" alt="User Image" />
                        <span class="hidden-xs">@ViewBag.nickname</span>
                    </a>
                    <ul class="dropdown-menu">
                        <li class="user-header">
                            <img src="~/@ViewBag.headimg" class="img-circle" alt="User Image">
                            <p>
                                <strong>@ViewBag.nickname</strong> 
                                <small>山人自有妙技!!!</small>
                            </p>
                        </li>
                        <li class="user-footer">
                            <div class="pull-left">
                                <a href="#" onclick="userInfo()" class="btn btn-default btn-flat">个人信息</a>
                            </div>
                            <div class="col-xs-4 text-center">
                                <a href="#" onclick="updatePwd()" class="btn btn-default btn-flat">修改密码</a>
                            </div>
                            <div class="pull-right">
                                <a href="/Login/Logout" class="btn btn-danger btn-flat">退出</a>
                            </div>
                        </li>
                    </ul>
                </li>
                <li>
                    <a href="#" data-toggle="control-sidebar"><i class="fa fa-gears"></i></a>
                </li>
            </ul>
        </div>
    </nav>
</header>
